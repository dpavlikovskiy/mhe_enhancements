<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

	<field formid="password" label="profile.newpassword" type="string" mandatory="true" min-length="8"
		   range-error="forms.8_255characters"
		   regexp="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!/#]).{8,}" />	
		
	<field formid="passwordconfirm" label="profile.newpasswordconfirm" type="string" mandatory="true" min-length="8"
		   range-error="forms.8_255characters"	
		   value-error="profile.passwordnomatch"/>	
	
	<action formid="send" valid-form="true"/>

</form>
