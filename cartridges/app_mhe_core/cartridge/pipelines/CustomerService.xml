          <key-binding alias="null" key="To_6"/>
          <key-binding alias="null" key="To_7"/>
          <key-binding alias="MailParams.put(&quot;email&quot;,CurrentHttpParameterMapamMap.email.stringValue)" key="From_8"/>
          <key-binding alias="null" key="To_8"/>
